<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>No Frills Sleep Tracker</title>
    <script type="text/javascript" src="/js/bundle.js"></script>
  </head>
  <body>
    <div id="app"></div>
    <script type="text/javascript">
      var userId = document.location.pathname.substring(4);
      var params = document.location.search.
                    substring(1).
                    split("&").
                    map(function(pair) { return pair.split("=") });
      for(var i = 0; i < params.length; i++) {
        var param = params[i];
        if (params[0] === "timezone") NoFrillsSleepTracker.setTimezone(window.localStorage, param[1]);
      }

      NoFrillsSleepTracker.renderApp(document.getElementById("app"), window.localStorage, userId);
    </script>
  </body>
</html>
